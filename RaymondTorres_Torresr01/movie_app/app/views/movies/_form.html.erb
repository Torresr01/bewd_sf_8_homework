<%= form_for(@movie) do |f| %>
  
    <% if @movie.errors.any? %>
      <div id="errors">
        <h2><%= pluralize(@movie.errors.count, "error") %>      prevented this post from saving
        </h2>
        <ul>
          <% @movie.errors.full_messages.each do |msg| %>
            <li><%= msg %></li> 
          <% end %>
        </ul>
      </div>
    <% end %> 

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div><br>
  
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div><br>
  
  <div class="field">
    <%= f.label :year_released %><br>
    <%= f.number_field :year_released, min: 1886, max: Date.today.year%>
  </div><br>
  
  <div class="actions">
    <%= f.submit %>
  </div>  

<% end %>
